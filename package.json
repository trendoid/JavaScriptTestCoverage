{
    "name": "my-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-scripts": "^3.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "coverage": "react-scripts test --coverage --no-cache",
        "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "coveralls": "^3.0.5",
        "react-test-renderer": "^16.8.6"
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/index.js",
            "!**/serviceWorker.js",
            "!**/build/**",
            "!**/node_modules/**",
            "!**/vendor/**"
        ],
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}
